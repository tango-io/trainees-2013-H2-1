.navbar.navbar-fixed-top.navbar-inner.nav-tabs
  .container
    .row
      .span3.paddingtop
        .kickstarterlogoup
          %a{:href => root_path }
            = image_tag ("logo2.png") 
      .span4.paddingtop
        - if user_signed_in?
          \#{link_to "My Projects", projects_path}
          \#{link_to "Dashboard", root_path}
          - if current_user.admin?
            #{link_to "Users Admin", admin_users_path} 
        - else
          %p What is Kickstarter?
      .span3.paddingtop
        %input{:placeholder => "Search", :type => "text"}/ 
      .span2.paddingtop
        - if user_signed_in?
          #{current_user.email}
          - if current_user.admin?
            #{link_to @project_count, controller: 'admin/projects', action: 'index' }
          \#{link_to "Sign out", destroy_user_session_path, :method => :delete}
        - else
          = link_to "Sign up", new_user_registration_path
          or #{link_to "sign in", new_user_session_path}
